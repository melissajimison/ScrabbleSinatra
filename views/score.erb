<article class="mainmain">

  <form action="" method="post" accept-charset="utf-8">
    <label for="user_word">Your Word</label>
    <input type="text" maxlength="7" name="word" value="" id="user_word">

    <input type="submit" value="Score!">
  </form>

  <% if @points %>
  <div class="cont">

    <h1> '<%= params["word"] %>' = <%= @points %> points!!  </h1>
    <% if params["word"].length == 7 %>
    <h1>  <%= BONUS %> BONUS for 7 letters word total points <%= @points + BONUS %> </h1>
    <% end %>

    <div class="one-word">
    <% if @by_letter %>
      <%= erb :points %>
    </div>
    <% end %>

  </div>
  <% end %>

</article>
