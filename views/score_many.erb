<form action="" method="post" accept-charset="utf-8">
  <label for="user_word">Please enter your words separed by space</label>
  <input type="text" name="words" value="" id="user_word">


  <input type="submit" value="Score!">
</form>


<% if @multiple_scores %>
  <% @multiple_scores.each do |pairs| %>
  <h1> <%= pairs[0] %> is the score for the word '<%= pairs[1] %>' </h1>
    <% if @by_letter_many %>
      <% @by_letter_many[pairs[1]].each do |pair| %>
      <h1>Points for <%= pair[0] %> is <%= pair[1] %> </h1>
    <% end %>
    <% end %>
  <% end %>
<% end %>
